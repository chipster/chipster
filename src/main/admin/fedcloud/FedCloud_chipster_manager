   then
       chipster_img=("os_tpl#732bbcb6-8612-4707-91b3-3a80e52bbdb4")
   fi

   if [[  $flavor == "0" ]]
   then
      flavor=('resource_tpl#m1-medium')
   fi
   link_ip=(1)
fi

#
