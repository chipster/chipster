   then
      flavor=('resource_tpl#m1-medium')
   fi
   link_ip=(1)
fi

if [[ $endpoint == "https://stack-server-01.ct.infn.it:8787" ]]
then
   if [[ $chipster_img == "0"  ]]
   then
       chipster_img=("os_tpl#07ab8317-e7eb-4c7b-8fc7-94414c0f336d")
   fi

   if [[  $flavor == "0" ]]
   then
      flavor=('resource_tpl#m1.large')
   fi
   link_ip=(1)
